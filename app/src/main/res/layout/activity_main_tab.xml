<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/bg_agray"
    >

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_gray"/>

    <RadioGroup
        android:id="@+id/rg_tab"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_gravity="bottom"
        android:background="#fafafa"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_home"
            style="@style/RadioButtonBottomTab"
            android:checked="true"
            android:drawableTop="@drawable/icon_home"
            android:text="首页"
            />

        <RadioButton
            android:id="@+id/rb_message"
            style="@style/RadioButtonBottomTab"
            android:gravity="center"
            android:drawableTop="@drawable/icon_message"
            android:text="消息"
            />

        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="56dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/tabbar_add_icon_sel"
            android:background="@drawable/correct_oran_selector"
            />

        <RadioButton
            android:id="@+id/rb_search"
            style="@style/RadioButtonBottomTab"
            android:drawableTop="@drawable/icon_square"
            android:gravity="center"
            android:text="发现"
            />
        <RadioButton
            android:id="@+id/rb_user"
            style="@style/RadioButtonBottomTab"
            android:drawableTop="@drawable/icon_selfinfo"
            android:gravity="center"
            android:text="我"
            />
    </RadioGroup>

</LinearLayout>
